<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="292dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="349dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/custom_input_style"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            style="@style/custom_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/feather_mail"
            android:drawablePadding="20dp"
            android:paddingLeft="30dp"
            android:ems="10"
            android:hint="Почта"
            android:inputType="textEmailAddress"
            android:rotationX="10"
            android:textDirection="anyRtl" />

        <EditText
            android:id="@+id/editTextTextPassword"
            style="@style/custom_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/feather_lock"
            android:drawablePadding="20dp"
            android:paddingLeft="30dp"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Пароль"
            android:inputType="textPassword" />

        <Button

            android:id="@+id/buttonAuthorization"
            style="@style/custom_input_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="@string/authorization_button"
            tools:layout_editor_absoluteX="-157dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            tools:layout_editor_absoluteY="237dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>